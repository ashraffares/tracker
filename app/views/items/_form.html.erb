<%= form_with(model: item) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.select :group_id, Group.all.collect { |x| [x.name, x.id]},{ :include_blank => 'Select group'},class:"form-control-sm form-control btn-outline-primary"%>
  </div>
  <div class="card-body">
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name,class:'form-control'%>
    

    <div class="field">
      <%= form.label :amount %>
      <%= form.number_field :amount,step: :any,class:'form-control'  %>
    </div>

    <div class="actions">
      <%= form.submit class:'btn btn-color btn-sm mt-2' %>
    </div>
  </div>
<% end %>
